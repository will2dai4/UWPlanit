# ==============================================
# UWPlanit Frontend Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ----------------------------------------------
# Backend API Configuration
# ----------------------------------------------
# URL of your Express backend API
# Development: http://localhost:4000/api/v1
# Production: https://your-api-domain.com/api/v1
NEXT_PUBLIC_API_BASE=http://localhost:4000/api/v1

# ----------------------------------------------
# Supabase Configuration (Required)
# ----------------------------------------------
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
# Number of items to fetch per page in graph views
NEXT_PUBLIC_GRAPH_PAGE_SIZE=200

# ----------------------------------------------
# Optional: Error Tracking & Analytics
# ----------------------------------------------
# Sentry DSN for error reporting (leave empty to disable)
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------
# Development Options (Optional)
# ----------------------------------------------
# Enable debug mode for additional console logs
# NEXT_PUBLIC_DEBUG=false

# API request timeout in milliseconds
# NEXT_PUBLIC_API_TIMEOUT=30000

